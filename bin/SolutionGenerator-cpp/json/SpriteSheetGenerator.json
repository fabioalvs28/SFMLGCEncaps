{
    "name": "SpriteSheetGenerator",
    "folder": "SpriteSheetGenerator/",
    "dependencies": ["Core", "Multimedia"],
    "vc_project_version": "17.0",
    "root_namespace": "SpriteSheetGenerator",
    "windows_target_platform_version": "10.0",
    "configuration": [
        {
            "name": "Debug|x64",
            "type": "Application",
            "use_debug_libraries": "true",
            "platform_toolset": "v143",
            "character_set": "Unicode",
            "warning_level": "Level3",
            "sdl_check": "true",
            "preprocessor_definitions": "_DEBUG;_CONSOLE;%(PreprocessorDefinitions)",
            "conformance_mode": "true",
            "subsystem": "Console",
            "language_standard": "stdcpp20",
            "generate_debug_information": "true",
            "additional_include_directories" : "$(SolutionDir)..\\..\\src\\Core;$(SolutionDir)..\\..\\src\\Multimedia",
            "additional_library_directories" : "$(SolutionDir)Core\\Build\\$(Configuration);$(SolutionDir)Multimedia\\Build\\$(Configuration);%(AdditionalLibraryDirectories)",
            "additional_dependencies" : "Core.lib;Multimedia.lib;%(AdditionalDependencies)",
            "out_dir": "$(ProjectDir)Build\\$(Configuration)\\",
            "int_dir": "$(ProjectDir)Build\\$(Configuration)\\intermediate\\"
        },
        {
            "name": "Release|x64",
            "type": "Application",
            "use_debug_libraries": "false",
            "platform_toolset": "v143",
            "whole_program_optimization": "true",
            "character_set": "Unicode",
            "warning_level": "Level3",
            "function_level_linking": "true",
            "intrinsic_functions": "true",
            "sdl_check": "true",
            "preprocessor_definitions": "NDEBUG;_CONSOLE;%(PreprocessorDefinitions)",
            "conformance_mode": "true",
            "precompiled_header": "Use",
            "precompiled_header_file": "pch.h",
            "subsystem": "Console",
            "language_standard": "stdcpp20",
            "enable_comdat_folding": "true",
            "optimize_references": "true",
            "generate_debug_information": "true",
            "additional_include_directories" : "$(SolutionDir)..\\..\\src\\Core;$(SolutionDir)..\\..\\src\\Multimedia",
            "additional_library_directories" : "$(SolutionDir)Core\\Build\\$(Configuration);$(SolutionDir)Multimedia\\Build\\$(Configuration);%(AdditionalLibraryDirectories)",
            "additional_dependencies" : "Core.lib;Multimedia.lib;%(AdditionalDependencies)",
            "out_dir": "$(ProjectDir)Build\\$(Configuration)\\",
            "int_dir": "$(ProjectDir)Build\\$(Configuration)\\intermediate\\"
        }
    ]
}